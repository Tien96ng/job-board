@using JobBoard.Models;
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<div class="container">
  <h1> Look At All The Jobs! </h1>

  <h3>Number of Jobs Available: @Model.Count </h3>
  @if (@Model.Count == 0)
  {
    <h3> There aren't currently any job postings </h3>
  }

  <div class="row">
    <div class="col-sm-4">
      @foreach (JobOpening job in Model)
      {
        <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Title: @job.Title</h5>
          <h6 class="card-subtitle mb-2 text-muted">Recruiter: @job.GetJobPostingContact().GetName() <br/>
                                                    Email: @job.GetJobPostingContact().GetEmail() <br/>
                                                    Number: @job.GetJobPostingContact().GetPhoneNumber() 
          </h6>
          <p class="card-text">Job Description: <br/> @job.Description</p>
          </div>
        </div>
      }
    </div>
  </div>
  <a href="/jobs/createjob"> Click Here to Create a Job Posting </a>
</div>



